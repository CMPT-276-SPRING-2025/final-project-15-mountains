# Flask configuration
SECRET_KEY=your-secret-key
FLASK_DEBUG=False
PORT=8080

# Google API configuration for Gemini
GOOGLE_API_KEY=your-google-api-key

# OpenAlex configuration
OPENALEX_EMAIL=your-email@example.com

# Database configuration - Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# Embedding and RAG configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_EVIDENCE_TO_RETRIEVE=200
MAX_EVIDENCE_TO_STORE=400
RAG_TOP_K=20

# Legacy configuration (maintained for compatibility)
MAX_PAPERS_TO_RETRIEVE=50
TOP_PAPERS_TO_EVALUATE=10
CONFIDENCE_THRESHOLD=0.7 